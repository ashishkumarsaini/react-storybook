{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:import/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "react-hooks",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        // Possible Problems
        "no-debugger": "error", // Disallow the use of `debugger` statements
        "no-unused-vars": [
            "warn",
            {
                "args": "none"
            }
        ], // Disallow unused variables (warn for variables, ignore arguments)
        "no-console": "warn", // Disallow the use of `console` (warn)
        "no-undef": "error", // Disallow the use of undeclared variables unless mentioned in `/*global */` comments
        "getter-return": "error", // Enforce `return` statements in getters
        // Suggestions
        "eqeqeq": [
            "error",
            "always"
        ], // Require `===` and `!==`
        "camelcase": [
            "error",
            {
                "properties": "never"
            }
        ], // Enforce camelcase naming convention (except for properties)
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ], // Enforce 2-space indentation, 1-space for switch cases
        "quotes": [
            "error",
            "single"
        ], // Enforce the use of single quotes
        "semi": [
            "error",
            "always"
        ], // Require semicolons at the end of statements
        "curly": [
            "error",
            "all"
        ], // Enforce consistent brace style for all control statements
        "no-trailing-spaces": "error", // Disallow trailing whitespace at the end of lines
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ], // Disallow multiple empty lines (max 1)
        "prefer-const": "error", // Require `const` declarations for variables that are never reassigned
        "arrow-spacing": "error", // Enforce consistent spacing before and after arrow functions
        "object-curly-spacing": [
            "error",
            "always"
        ], // Enforce consistent spacing inside braces of objects
        "array-bracket-spacing": [
            "error",
            "never"
        ], // Disallow spacing inside brackets of arrays
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ] // Enforce consistent spacing after commas
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}